{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "postgres-dbhub": {
      "type": "local",
      "command": ["npx", "-y", "@bytebase/dbhub"],
      "environment": {
        "DSN": "postgresql://olfong_user:olfong_password@localhost:5432/olfong_db?schema=public",
        "READONLY": "true"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "--init", "--pull=always", "mcr.microsoft.com/playwright/mcp"],
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "--volume=/home/olibuijr/Projects/olfong_stack:/workspace", "ghcr.io/mark3labs/mcp-filesystem-server:latest", "/workspace"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  }
}
