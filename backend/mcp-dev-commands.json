{
  "commands": {
    "start-dev-stack": {
      "description": "Start the complete Ölföng development stack (DB, backend, frontend, mobile)",
      "command": "bash start-dev-servers.sh",
      "workingDirectory": "/workspace",
      "background": true,
      "timeout": 300000
    },
    "stop-dev-stack": {
      "description": "Stop all development servers and clean up",
      "command": "bash stop-dev-servers.sh",
      "workingDirectory": "/workspace",
      "background": false,
      "timeout": 60000
    },
    "start-backend": {
      "description": "Start the Node.js backend server",
      "command": "npm run dev",
      "workingDirectory": "/workspace/backend",
      "background": true,
      "timeout": 300000,
      "healthCheck": {
        "url": "http://localhost:5000/health",
        "interval": 5000,
        "maxAttempts": 30
      }
    },
    "start-web": {
      "description": "Start the React web frontend",
      "command": "npm run dev",
      "workingDirectory": "/workspace/web",
      "background": true,
      "timeout": 300000,
      "healthCheck": {
        "url": "http://localhost:5173",
        "interval": 5000,
        "maxAttempts": 30
      }
    },
    "start-flutter": {
      "description": "Start the Flutter mobile development server",
      "command": "flutter run --web-port 8080",
      "workingDirectory": "/workspace/olfong_mobile_flutter",
      "background": true,
      "timeout": 600000,
      "healthCheck": {
        "url": "http://localhost:8080",
        "interval": 10000,
        "maxAttempts": 60
      }
    },
    "run-tests": {
      "description": "Run the complete test suite",
      "command": "npm run test",
      "workingDirectory": "/workspace/backend",
      "background": false,
      "timeout": 300000
    },
    "run-e2e-tests": {
      "description": "Run end-to-end tests with Playwright",
      "command": "npx playwright test",
      "workingDirectory": "/workspace/web-tests",
      "background": false,
      "timeout": 600000
    },
    "build-backend": {
      "description": "Build the backend for production",
      "command": "npm run build",
      "workingDirectory": "/workspace/backend",
      "background": false,
      "timeout": 180000
    },
    "build-web": {
      "description": "Build the web frontend for production",
      "command": "npm run build",
      "workingDirectory": "/workspace/web",
      "background": false,
      "timeout": 180000
    },
    "build-flutter": {
      "description": "Build the Flutter app for web",
      "command": "flutter build web",
      "workingDirectory": "/workspace/olfong_mobile_flutter",
      "background": false,
      "timeout": 600000
    },
    "docker-build": {
      "description": "Build all Docker images",
      "command": "docker-compose build",
      "workingDirectory": "/workspace",
      "background": false,
      "timeout": 600000
    },
    "docker-up": {
      "description": "Start all Docker services",
      "command": "docker-compose up -d",
      "workingDirectory": "/workspace",
      "background": false,
      "timeout": 120000
    },
    "docker-down": {
      "description": "Stop all Docker services",
      "command": "docker-compose down",
      "workingDirectory": "/workspace",
      "background": false,
      "timeout": 60000
    },
    "check-health": {
      "description": "Check health of all services",
      "command": "curl -f http://localhost:5000/health && curl -f http://localhost:5173 && docker-compose ps",
      "workingDirectory": "/workspace",
      "background": false,
      "timeout": 30000
    },
    "logs-backend": {
      "description": "Show backend server logs",
      "command": "tail -f logs/backend.log",
      "workingDirectory": "/workspace/backend",
      "background": true,
      "timeout": 3600000
    },
    "logs-web": {
      "description": "Show web frontend logs",
      "command": "tail -f logs/web.log",
      "workingDirectory": "/workspace/web",
      "background": true,
      "timeout": 3600000
    },
    "db-migrate": {
      "description": "Run database migrations",
      "command": "npx prisma migrate deploy",
      "workingDirectory": "/workspace/backend",
      "background": false,
      "timeout": 120000
    },
    "db-seed": {
      "description": "Seed the database with test data",
      "command": "npm run seed",
      "workingDirectory": "/workspace/backend",
      "background": false,
      "timeout": 180000
    },
    "clean-install": {
      "description": "Clean install all dependencies",
      "command": "rm -rf node_modules package-lock.json && npm install",
      "workingDirectory": "/workspace",
      "background": false,
      "timeout": 300000
    }
  },
  "processGroups": {
    "development": ["start-backend", "start-web", "start-flutter"],
    "testing": ["run-tests", "run-e2e-tests"],
    "building": ["build-backend", "build-web", "build-flutter"],
    "infrastructure": ["docker-build", "docker-up", "db-migrate", "db-seed"]
  }
}