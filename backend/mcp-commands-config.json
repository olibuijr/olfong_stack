{
  "server": {
    "stdio": true,
    "timeout": 300000,
    "maxConcurrentCommands": 5
  },
  "commands": {
    "allowedCommands": [
      "npm",
      "yarn",
      "pnpm",
      "node",
      "python",
      "pip",
      "docker",
      "docker-compose",
      "git",
      "curl",
      "wget",
      "make",
      "cargo",
      "go",
      "rustc",
      "flutter",
      "dart",
      "gradle",
      "mvn",
      "java",
      "kotlin",
      "swift",
      "xcodebuild"
    ],
    "blockedPatterns": [
      "rm -rf /",
      "sudo",
      "su",
      "chmod 777",
      "dd if=",
      "mkfs",
      "fdisk",
      "format",
      "shutdown",
      "reboot",
      "halt"
    ]
  },
  "backgroundProcesses": {
    "maxProcesses": 10,
    "processTimeout": 3600000,
    "cleanupInterval": 300000
  },
  "logging": {
    "level": "info",
    "file": "/app/logs/mcp-commands.log"
  }
}